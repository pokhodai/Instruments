<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButtonFavorites"
        style="@style/DefaultButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/favorites.viewButtonHeight"
        android:layout_marginHorizontal="@dimen/favorites.viewButtonMarginHorizontal"
        android:layout_marginVertical="@dimen/favorites.viewButtonMarginVertical"
        android:gravity="center"
        android:text="@string/favoritesButton"
        app:icon="@drawable/ic_arrow_right_white"
        app:iconGravity="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>